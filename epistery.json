{
  "name": "@epistery/message-board",
  "title": "Message board",
  "version": "0.1.0",
  "description": "Community message board with whitelist and notabot access control",
  "author": "Epistery",
  "main": "index.mjs",
  "icon": "/agent/epistery/message-board/icon.svg",
  "widget": "/agent/epistery/message-board/widget",
  "permissions": [
    "whitelist:read",
    "delegation:verify"
  ],
  "config": {
    "minNotabotPoints": 10,
    "postingList": "message-board::posting",
    "moderatorList": "message-board::moderators"
  }
}
